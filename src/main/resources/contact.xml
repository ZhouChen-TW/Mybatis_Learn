<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.mybatis.lean.coreImp.ContactsRepository" >

    <resultMap id="contactMapper" type="Contact">
        <id property="contact_Id" column="contact_id" />
        <result property="type" column="type" />
        <result property="value" column="value" />
    </resultMap>

    <select id="findAllContacts" resultMap="contactMapper">
        select * from Contact
    </select>

    <select id="getContactById" resultMap="contactMapper">
        select * from Contact where Contact.contact_id =#{contact_Id}
    </select>

    <insert id="createContact">
        insert into Contact (type,value) VALUES(#{type},#{value});
    </insert>

    <update id="updateContact">
        update Contact set Contact.type =#{type},Contact.value=#{value} where Contact.contact_id =#{contact_Id}
    </update>

    <delete id="deleteContactId">
        delete from Contact where Contact.contact_id =#{contact_Id}
    </delete>

</mapper>