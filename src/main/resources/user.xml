<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.mybatis.lean.coreImp.UsersRepository" >

    <resultMap id="icardMapper" type="Icard">
        <id property="icard_Id" column="icard_id" />
        <result property="icardMsg" column="icardmsg"/>
    </resultMap>
    <resultMap id="userMapper" type="User">
        <id property="user_Id" column="user_id" />
        <result property="userName" column="username" />
        <association property="icard" column="icard_id"  select="selectIcardForUser" ></association>
        <collection  property="contacts" javaType="ArrayList" column="user_Id" ofType="Contact" select="selectContactsForUser" >
        </collection>
        <collection  property="groups" javaType="ArrayList" column="user_Id" ofType="Group" select="selectGroupsForUser" >
        </collection>
    </resultMap>

    <select id="findAllUsers" resultMap="userMapper">
        select * from User
    </select>

    <select id="selectIcardForUser" resultMap="icardMapper">
        select * from Icard where Icard.icard_id =#{icard_id}
    </select>

    <select id="getUserById" resultMap="userMapper">
        select * from User where User.user_id = #{user_Id}
    </select>

    <select id="selectContactsForUser" resultType="Contact">
        select * from Contact where Contact.user_id =#{user_Id}
    </select>
    
    <select id="selectGroupsForUser" resultType="Group">
        select g.* from MyGroup g, User_Group ug where g.group_id = ug.group_id and ug.user_id = #{user_Id}
    </select>

    <select id="selectRelations" resultType="int">
        select  count(*) from User_Group where User_Group.user_id=#{0.user_Id} and User_Group.group_id=#{1.group_Id}
    </select>

    <insert id="creatUser" >
        insert into User(username,icard_id) VALUES (#{userName},#{icard.icard_Id});
    </insert>

    <insert id="createContact">
        insert into Contact (type,value,user_id) VALUES(#{0.type},#{0.value},#{1.user_Id});
    </insert>

    <insert id="createRelations">
        insert into User_Group (user_id,group_id) VALUES (#{0.user_Id},#{1.group_Id})
    </insert>

    <update id="updateUser">
        update User set User.username = #{userName},User.icard_id =#{icard.icard_Id}
    </update>

    <update id="updateContact">
        update Contact set Contact.type =#{0.type},Contact.value=#{0.value},Contact.user_id =#{1.user_Id}
    </update>

    <delete id="deleteUserById">
        delete from User where User.user_id =#{user_Id}
    </delete>

    <delete id="deleteRelations">
         delete from User_Group where User_Group.user_id=#{0.user_Id} and User_Group.group_id=#{1.group_Id}
    </delete>


</mapper>