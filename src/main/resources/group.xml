<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.mybatis.lean.coreImp.GroupsRepository" >

    <resultMap id="groupMapper" type="Group">
        <id property="group_Id" column="group_id" />
        <result property="groupName" column="groupname" />
        <collection  property="users" javaType="ArrayList" column="group_Id" ofType="User" select="selectUsersForGroup" >
        </collection>
    </resultMap>

    <select id="findAllGroups" resultMap="groupMapper">
        select * from MyGroup;
    </select>

    <select id="selectUsersForGroup" resultType="User" >
        select u.* from User u, User_Group ug where u.user_id = ug.user_id and ug.group_id = #{group_Id}
    </select>

    <select id="getGroupById" resultMap="groupMapper">
        select * from MyGroup where MyGroup.group_id =#{group_Id}
    </select>

    <insert id="createGroup">
        insert into MyGroup(groupname) VALUES(#{groupName})
    </insert>

    <update id="updateGroup">
        update MyGroup set MyGroup.groupname = #{groupName} where MyGroup.group_id = #{group_Id}
    </update>

    <delete id="deleteGroup">
        delete from MyGroup where MyGroup.group_id = #{group_Id}
    </delete>

</mapper>